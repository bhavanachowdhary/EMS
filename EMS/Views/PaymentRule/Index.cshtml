@model IEnumerable<PaymentRule>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Payment Rules</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="PaymentRule" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp; Add Payment Rule
            </a>
        </div>
    </div>
<br />
<br/>


<table class="table table-striped text-center" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Payment Rule
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.PaymentRuleId
                </td>
                <td>
                    @obj.PaymentRuleName
                </td>
                <td>
                    <div class="w-80 btn-group" role="group">
                            <a asp-controller="PaymentRule" asp-action="Edit" asp-route-id="@obj.PaymentRuleId"
                               class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="PaymentRule" asp-action="Delete" asp-route-id="@obj.PaymentRuleId"
                        class="btn btn-primary"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>