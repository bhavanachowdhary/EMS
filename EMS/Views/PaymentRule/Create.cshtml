@model PaymentRule

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Payment Rule</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="PaymentRuleName"></label>
            <input asp-for="PaymentRuleName" class="form-control" />
            <span asp-validation-for="PaymentRuleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="PaymentRule" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial"/>
}
}