@model WorkHours

<form method="post">
    <input asp-for="WorkHourId" type="hidden" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Work Hours</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="WorkHour"></label>
            <input asp-for="WorkHour" class="form-control" />
            <span asp-validation-for="WorkHour" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="WorkHours" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial"/>
}
}